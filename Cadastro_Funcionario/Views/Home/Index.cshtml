@{
    ViewData["Title"] = "Home Page";
}

@model Cadastro_Funcionário_Funcional.Models.Funcionario
@{
    ViewData["Title"] = "Cadastro Funcionario";
}

<div class="container">
    <form asp-action="Create" >
        <div class="row flex-column">

            <div class="mb-3 col-6">
                <label for="" class="form-label">Nome:</label>
                <input  asp-controller="Cadastro" asp-for="Nome" type="text" class="form-control" id="nome">

            </div>
            <div class="mb-3 col-4">
                <label for="" class="form-label">CPF:</label>
                <input type="text" class="form-control" id="cpf">
            </div>

        </div>

        <div class="row">
            <div class="mb-3 col-4">
                <label for="" class="form-label">RG:</label>
                <input type="text" class="form-control" id="rg">
            </div>

            <div class="mb-3 col-4">
                <label for="" class="form-label">Orgâo Emissor do RG:</label>
                <input type="text" class="form-control" id="emissor">
            </div>

            <div class="mb-3 col-4">
                <label for="" class="form-label">Ttulo de eleitor</label>
                <input type="text" class="form-control" id="titulo">
            </div>

        </div>

        <div class="row">
            <div class="mb-3 col-4">
                <label for="" class="form-label">CNH:</label>
                <input type="text" class="form-control" id="cnh">
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Check">
                <label class="form-check-label" for="Check">Considerar como gestor</label>
            </div>



        </div>

        <div class="row flex-column">
            <div class="mb-3 col-4">
                <label for="" class="form-label">CEP:</label>
                <input type="text" class="form-control" id="cep">
            </div>
        </div>
        <div class="row ">
            <div class="mb-3 col-10">
                <label for="" class="form-label">Endereço:</label>
                <input type="text" class="form-control" id="endereco">
            </div>
            <div class="mb-3 col-2">
                <label for="" class="form-label">Número:</label>
                <input type="text" class="form-control" id="numero">
            </div>


        </div>

        <div class="row">
            <div class="mb-3 col-6">
                <label for="" class="form-label">Complemento:</label>
                <input type="text" class="form-control" id="complemento">
            </div>

            <div class="mb-3 col-6">
                <label for="" class="form-label">Bairro:</label>
                <input type="text" class="form-control" id="bairro">
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-6">
                <label for="" class="form-label">Cidade:</label>
                <input type="text" class="form-control" id="cidade">
            </div>

            <div class="mb-3 col-6">
                <label for="" class="form-label">Estado:</label>
                <input type="text" class="form-control" id="estado">
            </div>

            <div class="row">
                <div class="mb-3 col-8">
                    <label for="" class="form-label">Ponto de Referência:</label>
                    <input type="text" class="form-control" id="estado">
                </div>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Check">
                <label class="form-check-label" for="Check">Ativo?</label>
            </div>

        </div>



        <div class="container " >
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-primary ">Cancelar</button>
            <button type="submit" class="btn btn-primary ">Mostrar Todos</button>


        </div>
       






    </form>
</div>
